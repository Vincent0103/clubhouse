      </div>
    </div>
    <% if (locals.user?.is_admin) { console.log(message)%>
    <div>
      <a href="/delete-message/<%= message.id %>">
        <button
          class="cursor-pointer rounded-md bg-rose-500 p-1.5 text-sm font-medium text-white hover:bg-rose-700"
          type="button"
          id="reply-btn"
        >
          <i class="size-5" data-lucide="trash-2"></i>
        </button>
      </a>
    </div>
    <% } %>
  </div>
  <h2 class="text-lg font-semibold text-rose-900"><%= message.title %></h2>
  <p class="text-gray-700"><%= message.content %></p>
</section>
